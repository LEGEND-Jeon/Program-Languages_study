#include<stdio.h>

int main(){
    int a,b,opt;
    int res;
    printf("1.덧셈 2.뺄셈 3.곱셈 4.나눗셈 \n");
    printf("선택:");
    scanf("%d",&opt);
    printf("두 개의 정수 입력:");
    scanf("%d %d",&a, &b);
    if (opt==1)
        res=a+b;
    else if (opt==2)
        res=a-b;
    else if (opt==3)
        res=a*b;
    else if (opt==4)
        res=a/b;
    printf("결과 : %d \n",res);
    return 0;
}
